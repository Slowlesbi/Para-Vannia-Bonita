<body>

<h1>Nuestro Mural</h1>

<div id="fijados"></div>
<div id="chat"></div>

<div id="inputArea">
  <input type="text" id="mensajeInput" placeholder="Escribe algo...">
  <input type="file" id="imagenInput">
  <button onclick="enviar()">Enviar</button>
</div>

<script>
const supabase = window.supabase.createClient(
  "sb_publishable_B99Y7tHSkS-r_9sdUiDIgw_0BLLX7xU",
  "sb_secret_u_sNHAZFCdG2VuMba5Wfwg_O7hbb6R6"
);

const usuariosPermitidos = ["Mellany", "Ella"]; 
const usuario = prompt("Nombre:");

if (!usuariosPermitidos.includes(usuario)) {
  alert("No autorizado ðŸ’œ");
  throw new Error("No autorizado");
}

const chat = document.getElementById("chat");
const fijadosDiv = document.getElementById("fijados");

function crearMensajeHTML(msg) {
  const div = document.createElement("div");
  div.classList.add("mensaje");
  div.classList.add(msg.usuario === usuario ? "morado" : "azul");

  div.innerHTML = `
    <strong>${msg.usuario}</strong><br>
    ${msg.contenido || ""}
    ${msg.imagen_url ? `<img src="${msg.imagen_url}">` : ""}
    <br>
    <small>${new Date(msg.creado_en).toLocaleString()}</small>
  `;

  if (msg.usuario === usuario) {
    const borrarBtn = document.createElement("button");
    borrarBtn.innerText = "Borrar";
    borrarBtn.onclick = async () => {
      await supabase.from("mensajes").delete().eq("id", msg.id);
    };
    div.appendChild(borrarBtn);

    const fijarBtn = document.createElement("button");
    fijarBtn.innerText = "Fijar";
    fijarBtn.onclick = async () => {
      await supabase.from("mensajes").update({ fijado: true }).eq("id", msg.id);
    };
    div.appendChild(fijarBtn);
  }

  return div;
}

async function cargarMensajes() {
  const { data } = await supabase
    .from("mensajes")
    .select("*")
    .order("creado_en", { ascending: true });

  chat.innerHTML = "";
  fijadosDiv.innerHTML = "<h3>ðŸ“Œ Notas Fijadas</h3>";

  data.forEach(msg => {
    const elemento = crearMensajeHTML(msg);
    if (msg.fijado) {
      fijadosDiv.appendChild(elemento);
    } else {
      chat.appendChild(elemento);
    }
  });
}

async function enviar() {
  const input = document.getElementById("mensajeInput");
  const imagen = document.getElementById("imagenInput").files[0];

  let imagen_url = null;

  if (imagen) {
    const nombre = Date.now() + "_" + imagen.name;
    await supabase.storage.from("imagenes").upload(nombre, imagen);

    imagen_url = supabase.storage
      .from("imagenes")
      .getPublicUrl(nombre).data.publicUrl;
  }

  await supabase.from("mensajes").insert([
    { usuario, contenido: input.value, imagen_url }
  ]);

  input.value = "";
  document.getElementById("imagenInput").value = "";
}

supabase
  .channel("mensajes")
  .on("postgres_changes",
      { event: "*", schema: "public", table: "mensajes" },
      () => cargarMensajes()
  )
  .subscribe();

cargarMensajes();
</script>

